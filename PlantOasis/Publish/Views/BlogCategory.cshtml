        <div class="col-md-3">
            @Html.Partial("Blog/_BlogCategories")
        </div>
        <div class="col-md-9">
            <div class="blog-article-list">
                <h1>@Model.Value("pageTitle")</h1>
                @Html.Partial("Blog/_BlogArticleList")
            </div>
        </div>
    </div>
</div>
