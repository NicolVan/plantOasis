@model PlantOasis.lib.Models.AvailabilityModel

<h1>DOSTUPNOSŤ PRODUKTOV</h1>
@{
    using (Html.BeginUmbracoForm<PlantOasis.lib.Controller.AvailabilityController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="plantoasis-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-12">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.AvailabilityName)
                        @Html.TextBoxFor(m => m.AvailabilityName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AvailabilityName)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Zapísať</a>
                    <a href="@Url.Content("~/home/zakaznicka-sekcia/dostupnost-produktov")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}

