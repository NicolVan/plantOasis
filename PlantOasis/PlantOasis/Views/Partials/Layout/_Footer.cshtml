                    <p>Telefón: @texty.PlantOasisTelefon</p>
                    <p>Email: @texty.PlantOasisEmail</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="footer-text-section">
                    <h3>O SPOLOČNOSTI</h3>
                    <ul class="menu">
                        <li class="footer"><a href="@Url.Content("~/home/kontakt")">Kontakt</a></li>
