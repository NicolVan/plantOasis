@model PlantOasis.lib.Models.DodavatelModel

<h1>Dodavatel</h1>
@{
    using (Html.BeginUmbracoForm<PlantOasis.lib.Controller.DodavatelController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="plantoasis-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.ProducerName)
                        @Html.TextBoxFor(m => m.ProducerName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProducerName)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.ProducerWeb)
                        @Html.TextBoxFor(m => m.ProducerWeb, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProducerWeb)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-item">
                        @Html.LabelFor(x => x.ProducerDescription)
                        @Html.TextAreaFor(m => m.ProducerDescription, new { @class = "form-control ckedit", rows = 10 })
                        @Html.ValidationMessageFor(m => m.ProducerDescription)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Zapísať</a>
                    <a href="@Url.Content("~/home/zakaznicka-sekcia/dodavatelia")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}

@Html.Partial("Eshop/_CKEditor", new PlantOasis.lib.Models.CKEditorModel("ckedit", "200"))
